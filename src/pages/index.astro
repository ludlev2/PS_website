---
import Layout from "../layouts/Default.astro";
import Navbar from "../components/Navbar.astro";
import NavbarClone from "../components/NavbarClone.astro";
import Starfall from "../components/Starfall.astro";
import { Image, Picture } from '@astrojs/image/components';
const title = "Home";
import heroImage from 'public/img/exchange-new.webp'
---

<Layout title={title}>
  <div class="dark-wrapper">
    <!-- Landing page Hero -->
    <section class="hero is-fullheight is-transparent">
      <div class="hero-head">

        <!-- Cloned navbar -->
        <NavbarClone />

        <!-- Static navbar -->
        <Navbar />
      </div>

      <!-- Animated particles -->
      <Starfall />

      <!-- Hero Image and Title -->
      <div class="hero-body">
        <div class="container">
          <div class="columns is-vcentered">
            <!-- Landing page Title -->
            <div class="column is-5 landing-caption">
              <h1 class="title is-1 is-light is-semibold main-title">
                Easily build Loyalty Coalitions
              </h1>
              <h1 class="subtitle is-5 is-light is-spaced">
                          <i>Where users can access all benefits in one place & use them across multiple brands</i>
               </h1>
              <!-- CTA -->
              <p class="buttons">
                <a
                  href="mailto: adithya@pointswitch.xyz"
                  class="button k-button k-primary raised has-gradient is-fat is-bold"
                >
                  <span class="text">Get in Touch</span>
                  <span class="front-gradient"></span>
                </a>
              </p>
            </div>
            <!-- Hero image -->
            <div class="column is-7">
               <img src="/img/image (1).png"  alt="" />
            </div>
          </div>
        </div>
      </div>


    <!-- /Landing page Hero -->

    <!-- Icon Features section -->
    <section id="start" class="section is-transparent is-relative">
      <!-- Container -->
      <div class="container">
           <h1 class="title is-3 is-light is-spaced title">
            Build loyalty coalitions that reward users for their habits.
           </h1>
            <h1 class="subtitle is-5 is-light is-spaced">
            <i>Easily launch & manage curated loyalty coalitions for target users segments: Give users rewards for activities they care about beyond saving money.</i>
            </h1>
      </div>

        <!-- Content wrapper -->
        <div class="content-wrapper is-medium mt-6">
          <div class="container">

                     <h1 class="title is-1 is-light is-spaced title">
                      Why PointSwitch?
                     </h1>

          </div>
        </div>
        <div class="content-wrapper is-medium mt-1">
          <div class="container">

                     <h1 class="title is-3 is-light is-spaced title">
                      Align with target end users & partners
                     </h1>
                      <h1 class="subtitle is-4 is-light is-spaced">
                      You want to target sports fans: They go to the gym, buy protein & stream sports.
                      PointSwitch helps you build a coalition between gyms, protein & streaming companies. Then, fans care about each brand involved, as it rewards their habits; they donâ€™t just care about saving money like in
                      traditional coalitions.
                      </h1>

          </div>
        </div>
        <div class="content-wrapper">
          <div class="container">

                     <h1 class="title is-3 is-light is-spaced title">
                       Manage healthy user movement between brands
                     </h1>
                     <h1 class="subtitle is-4 is-light is-spaced">
                     PointSwitch helps you manage user migration by preventing users from migrating away to loyalty partners or causing financial loss by migrating to your platform all at once.
                     </h1>

          </div>
        </div>
        <div class="content-wrapper">
          <div class="container">

                     <h1 class="title is-3 is-light is-spaced title">
                       Manage relationships with loyalty partners
                     </h1>
                     <h1 class="subtitle is-4 is-light is-spaced">
                     With clear data sharing rules, loyalty point clearing & settling, and fair governance for decision making, PointSwitch fosters strong relationships between partners in your coalition.
                     </h1>

          </div>
        </div>

        <!-- Content wrapper -->
      </div>
      <!-- Company section -->
                <section class="section is-medium has-big-dark-gradient">
                  <!-- Container -->
                  <div class="container">
                    <!-- Divider -->
                    <div class="divider is-centered"></div>
                    <!-- Title & subtitle -->
                    <h1 class="title is-1 is-light is-semibold has-text-centered is-spaced">
                      Meet the people behind the curtain...
                    </h1>

                    <!-- Content wrapper -->
                    <div class="content-wrapper is-large">
                      <div class="columns is-vcentered">
                        <div class="column is-hidden-mobile"></div>

                        <!-- Team member -->
                        <div class="column is-3">
                          <div class="team-member-container">
                            <!-- Card -->
                            <div class="dark-card">
                              <!-- Avatar wrapper -->
                              <div class="avatar">
                                <!-- Svg circle -->
                                <svg
                                  class="circle-chart"
                                  viewbox="0 0 33.83098862 33.83098862"
                                  width="140"
                                  height="140"
                                  xmlns="http://www.w3.org/2000/svg"
                                >
                                  <!-- Track -->
                                  <circle
                                    class="circle-chart-background"
                                    stroke-width="1"
                                    fill="none"
                                    cx="16.91549431"
                                    cy="16.91549431"
                                    r="15.91549431"></circle>
                                  <!-- Stroke -->
                                  <circle
                                    class="circle-chart-circle"
                                    stroke-width="1"
                                    stroke-dasharray="33,100"
                                    stroke-linecap="round"
                                    fill="none"
                                    cx="16.91549431"
                                    cy="16.91549431"
                                    r="15.91549431"></circle>
                                </svg>
                                <!-- Sketeched face -->
                                <img class="is-sketch" src="/img/team/fryderyk.png" alt="" />
                                <!-- Real face -->
                                <img class="is-real" src="/img/team/fryderyk.png" alt="" />
                              </div>
                              <!-- Member meta -->
                              <div class="member-info">
                                <h4 class="title is-light is-6 is-tight">Fryderyk Sitnik</h4>
                                <div class="position">Founder // CEO</div>
                                <p class="description">
                                  Founder of TeenCrunch (accelerator), prev. VC/PE analyst, 2 startup bids
                                </p>
                              </div>
                            </div>
                          </div>
                        </div>

                        <!-- Team member -->
                        <div class="column is-3">
                          <div class="team-member-container">
                            <div class="dark-card">
                              <div class="avatar">
                                <svg
                                  class="circle-chart"
                                  viewbox="0 0 33.83098862 33.83098862"
                                  width="140"
                                  height="140"
                                  xmlns="http://www.w3.org/2000/svg"
                                >
                                  <circle
                                    class="circle-chart-background"
                                    stroke-width="1"
                                    fill="none"
                                    cx="16.91549431"
                                    cy="16.91549431"
                                    r="15.91549431"></circle>
                                  <circle
                                    class="circle-chart-circle"
                                    stroke-width="1"
                                    stroke-dasharray="33,100"
                                    stroke-linecap="round"
                                    fill="none"
                                    cx="16.91549431"
                                    cy="16.91549431"
                                    r="15.91549431"></circle>
                                </svg>
                                <img class="is-sketch" src="/img/team/levi.jpeg" alt="" />
                                <img class="is-real" src="/img/team/levi.jpeg" alt="" />
                              </div>
                              <div class="member-info">
                                <h4 class="title is-light is-6 is-tight">Levente Ludanyi</h4>
                                <div class="position">Founder // CTO</div>
                                <p class="description">
                                Youngest Quant Researcher at WorldQuant, International Olympiad silver medalist
                                </p>
                              </div>
                            </div>
                          </div>
                        </div>

                        <!-- Team member -->
                        <div class="column is-3">
                          <div class="team-member-container">
                            <div class="dark-card">
                              <div class="avatar">
                                <svg
                                  class="circle-chart"
                                  viewbox="0 0 33.83098862 33.83098862"
                                  width="140"
                                  height="140"
                                  xmlns="http://www.w3.org/2000/svg"
                                >
                                  <circle
                                    class="circle-chart-background"
                                    stroke-width="1"
                                    fill="none"
                                    cx="16.91549431"
                                    cy="16.91549431"
                                    r="15.91549431"></circle>
                                  <circle
                                    class="circle-chart-circle"
                                    stroke-width="1"
                                    stroke-dasharray="33,100"
                                    stroke-linecap="round"
                                    fill="none"
                                    cx="16.91549431"
                                    cy="16.91549431"
                                    r="15.91549431"></circle>
                                </svg>
                                <img class="is-sketch" src="/img/team/adithya.png" alt="" />
                                <img class="is-real" src="/img/team/adithya.png" alt="" />
                              </div>
                              <div class="member-info">
                                <h4 class="title is-light is-6 is-tight">Adithya Ravichandran</h4>
                                <div class="position">Founder // COO</div>
                                <p class="description">
                                  Founder of LUXMUN (Non-Profit), Fintech+GameDev hackathon winner
                                </p>
                              </div>
                            </div>
                          </div>
                        </div>

                        <div class="column is-hidden-mobile"></div>
                      </div>
                    </div>
                  </div>
              </div>
      <!-- /Container -->
    </section>
    <!-- /Icon Features section -->
    <!-- Contact section -->
  </div>

  
</Layout>
